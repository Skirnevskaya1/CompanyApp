<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/ThemeCompanyApp">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    style="@style/MaterialButtonStyleAppBarTopBackground"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/icon_menu"
                    android:id="@+id/btnAppBarMainMenu"
                    app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                    style="@style/MaterialButtonStyleAppBarTopBackground"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/icon_back_white"
                    android:id="@+id/btnAppBarBack"
                    app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:text="@string/company_app"
                    android:id="@+id/tvAppBarTitle"
                    app:layout_constraintEnd_toStartOf="@+id/btnAppBarNotification"
                    app:layout_constraintStart_toEndOf="@+id/btnAppBarMainMenu" />

            <com.google.android.material.button.MaterialButton
                    style="@style/MaterialButtonStyleAppBarTopBackground"
                    android:layout_height="match_parent"
                    android:text="@null"
                    android:drawableLeft="@drawable/icon_with_notification_white"
                    android:id="@+id/btnAppBarNotification"
                    app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                    style="@style/MaterialButtonStyleAppBarTopBackground"
                    android:layout_height="match_parent"
                    android:text="@null"
                    android:drawableLeft="@drawable/icon_apply_white"
                    android:id="@+id/btnAppBarApply"
                    app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                    style="@style/MaterialButtonStyleAppBarTopBackground"
                    android:layout_height="match_parent"
                    android:text="@null"
                    android:drawableLeft="@drawable/icon_search_white"
                    android:id="@+id/btnAppBarSearch"
                    app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>


</androidx.constraintlayout.widget.ConstraintLayout>